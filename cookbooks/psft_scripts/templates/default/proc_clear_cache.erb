#!/bin/bash
export ORACLE_HOME=<%= @ora %>
export LIBPATH=<%= @ora %>/lib:$PATH

#tuxdir used to be set auto prior to 8.50, now it must be set manually

export TUXDIR=<%= @ps_home %>/middleware/<%= @tux_dir %>
export PATH=/bin:/sbin:/usr/bin:/usr/sbin:<%= @ps_home %>/<%= @app %>/<%= @env %>/bin:<%= @ps_home %>/middleware/<%= @tux_dir %>/bin:<%= @ora %>/lib:<%= @ps_home %>/middleware/<%= @tux_dir %>/bin:<%= @ora %>/bin:/home/tuxedo/bin
export LD_LIBRARY_PATH=<%= @ps_home %>/<%= @app %>/<%= @env %>/bin/:<%= @ps_home %>/<%= @app %>/<%= @env %>/lib:<%= @ps_home %>/middleware/<%= @tux_dir %>/lib:<%= @ora %>/lib
. <%= @ps_home %>/<%= @app %>/<%= @env %>/psconfig.sh

echo "PeopleSoft process scheduler shutting down for domain <%= @domain %>"
<%= @ps_home %>/<%= @app %>/<%= @env %>/bin/psadmin -p stop -d <%= @domain %>
sleep 20
rm -rf <%= @ps_home %>/<%= @app %>/<%= @env =%>/appserv/prcs/<%= @domain %>/CACHE/*
echo "Cache deleted for <%= @domain %>"
sleep 20
echo "PeopleSoft process scheduler  booting for domain <%= @domain %>"
<%= @ps_home %>/<%= @app %>/<%= @env =%>/bin/psadmin -p start -d <%= @domain %>
